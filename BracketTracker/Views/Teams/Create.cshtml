@{
  Layout = "_Layout";
}

@model BracketTracker.Models.Team

<h2>Add a Team</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  <p> @Html.LabelFor(model => model.Name): @Html.TextBoxFor(model => model.Name)</p>
  
  <input type="submit" value="Add Team">
}
<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Teams", "Index")</p>
<p>@Html.ActionLink("See all completed Rounds this session", "Index", "Rounds")</p>