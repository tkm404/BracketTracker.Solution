@{
  Layout = "_Layout";
}

@using BracketTracker.Models

<h2>Player Pool!</h2>

@if (Model.Count == 0)
{
  <p>No players yet</p>
}

<ul>
@foreach (Player player in Model)
{
  <li>@Html.ActionLink($"{player.Name}", "Details", new { id = player.PlayerId })</li>
}
</ul>
<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add another Player", "Create")</p>
@* <p>@Html.ActionLink("Delete a Player", "Delete")</p> *@
<p>@Html.ActionLink("See all completed Rounds this session", "Index", "Rounds")</p>