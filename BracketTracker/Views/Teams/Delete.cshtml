@{
    Layout = "_Layout";
}


@model BracketTracker.Models.Team

<h2>Delete this Team?</h2>
<hr />
@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
@using (Html.BeginForm())
{
    @Html.Hidden("teamId", @Model.TeamId)
    <input type="submit" value="Delete" />
}

<hr />
<p>@Html.ActionLink("Back to Teams", "Index")</p>
<p>@Html.ActionLink("Back to Details", "Details", new { id = @Model.TeamId});</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
